<idea-plugin url="https://artemis.ase.in.tum.de/#/">
    <id>de.tum.www1.orion</id>
    <name>Orion - Artemis Programming Exercise Integration</name>
    <vendor email="alexander.ungar@tum.de" url="http://www1.in.tum.de">Technical University of Munich</vendor>
    <description><![CDATA[
        <p>Integration of ArTEMiS programming exercises into the IntelliJ IDE</p>
        <p>Allows for easy participation in courses with programming exercises in any language:</p>
        <ul>
            <li>Import and open exercises in Intellij</li>
            <li>Use the same user interface as on the website</li>
            <li>Submit changes directly and see your test results/feedback</li>
        </ul>
    ]]></description>
    <change-notes><![CDATA[
        <p>
            <h1>Improved Build & Test Responsiveness </h1>
            <h2>Features</h2>
            <ul>
                <li>Show status of build/clone/import in the Artemis browser window</li>
                <li>Support submissions without changes (i.e. empty commits)</li>
                <li>Add support for triggering builds/tests from within the IDE, e.g. using the run button or a shortcut</li>
            </ul>
            <h2>Improvements and Bugfixes</h2>
            <ul>
                <li>Add missing translations (German)</li>
                <li>Change toolwindow label from "ArTEMiS" to "Artemis"
            </ul>
        </p>
    ]]></change-notes>

    <depends>com.intellij.modules.vcs</depends>
    <depends>org.jetbrains.idea.maven</depends>
    <depends>Git4Idea</depends>

    <idea-version since-build="192.5728" until-build="193.*"/>
    
    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Artemis" anchor="right" icon="/toolWindowIcon.png" factoryClass="de.tum.www1.orion.ui.browser.BrowserFactory" />
        <applicationService serviceInterface="de.tum.www1.orion.vcs.CredentialsService"
                            serviceImplementation="de.tum.www1.orion.vcs.CredentialsInjectorService"/>
        <projectService serviceImplementation="de.tum.www1.orion.ui.OrionRouterService"/>
        <projectService serviceInterface="de.tum.www1.orion.util.OrionStudentExerciseRegistry"
                        serviceImplementation="de.tum.www1.orion.util.DefaultOrionStudentExerciseRegistry"/>
        <projectService serviceInterface="de.tum.www1.orion.bridge.ArtemisBridge"
                        serviceImplementation="de.tum.www1.orion.bridge.ArtemisJSBridge"/>
        <postStartupActivity implementation="de.tum.www1.orion.vcs.OrionStartupProjectRefreshActivity"/>
        <applicationService serviceInterface="de.tum.www1.orion.util.OrionSettingsProvider"
                            serviceImplementation="de.tum.www1.orion.util.OrionSettingsProviderService"/>
        <projectConfigurable instance="de.tum.www1.orion.ui.settings.OrionPluginSettings" id="de.tum.www1.orion.ui.settings"
                             nonDefaultProject="true" groupId="tools" bundle="i18n.OrionBundle"
                             key="orion.settings.displayName" />
        <configurationType implementation="de.tum.www1.orion.build.OrionSubmitRunConfigurationType"/>
        <programRunner implementation="de.tum.www1.orion.build.OrionProgramRunner" />
        <projectService serviceInterface="de.tum.www1.orion.build.OrionTestParser"
                        serviceImplementation="de.tum.www1.orion.build.OrionTestInterceptor"/>
        <projectService serviceInterface="de.tum.www1.orion.util.OrionInstructorExerciseRegistry"
                        serviceImplementation="de.tum.www1.orion.util.DefaultOrionInstructorExerciseRegistry"/>
        <projectService serviceImplementation="de.tum.www1.orion.build.instructor.OrionInstructorBuildUtil"/>
    </extensions>

    <actions>
    </actions>
</idea-plugin>